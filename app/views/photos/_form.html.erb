<div class="card mx-auto p-2  d-flex justify-content-center" style="width: 30rem; border: 2px solid black; margin-top: 50px; height: 33rem">
  <div class="card-body">
    <h2>Photo</h2>

    <%= form_with(model: photo, local: true) do |form| %>
      <div class="form-group" id="title">
        <%= form.label :title %><br />
        <%= form.text_field :title, autofocus: true%>
      </div>

      <div class="form-group" id="descr">
        <%= form.label :description %><br />
        <%= form.text_field :description %>
      </div>

      <%= form.file_field :file %>

      <div class="actions">
        <%= form.submit "Send" %>
      </div>
    <% end %>
  </div>
</div>
