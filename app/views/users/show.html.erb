<div class="view intro-2">
        <div class="full-bg-img">
            <div class="mask rgba-black-light flex-center">
                <div class="container text-center white-text">
                    <div class="white-text text-center wow fadeInUp">
                    <%= image_tag avatar_image, size: '250x250',class: 'rounded-circle mx-auto d-block'%>
                 <b><h1 class="h1"> <%= @user.email %> </h1></b>
                    </div>
                </div>
            </div>
        </div>
    </div>






<div class="row">



  <% @photos.each_with_index do |photo, index| %>
      <figure class="col-md-4 " style="width: 18rem">
          <a href="image_source" data-size="700x800">
          <div class="hovereffect">
            <%= image_tag photo.file, class: "img-fluid", style: "height: 100%", alt: "picture"%>
              <div class="overlay">
               
                <p>
                  <%= photo.title %>
                </p>
                <%= link_to 'Delete', photo, method: :delete, data: {confirm: 'Are you sure?'} %>
              </div>
          </a>
          
        </figure>
        
  <% end %>
  </div>
